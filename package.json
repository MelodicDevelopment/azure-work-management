{
	"name": "azure-work-management",
	"displayName": "Azure Work Management",
	"description": "Integrates Azure work items into VS Code.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:azure-work-management.helloWorld",
		"onView:azure-work-management:boards"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "Azure Work Management",
				"properties": {
					"azure-work-management.organization": {
						"type": "string",
						"default": null,
						"description": "The Azure organization."
					},
					"azure-work-management.project": {
						"type": "string",
						"default": null,
						"description": "The Azure organization project."
					},
					"azure-work-management.team": {
						"type": "string",
						"default": null,
						"description": "The Azure organization project team."
					},
					"azure-work-management.username": {
						"type": "string",
						"default": null,
						"description": "The Azure username for authentication."
					},
					"azure-work-management.personal-access-token": {
						"type": "string",
						"default": null,
						"description": "The Azure personal access token."
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "azure-work-management-boards",
					"title": "Azure Work Management",
					"icon": "src/resources/azure-devops.svg"
				}
			]
		},
		"views": {
			"azure-work-management-boards": [
				{
					"id": "azure-work-management:boards",
					"name": "Boards",
					"contextualTitle": "Azure Work Management: Boards",
					"icon": "src/resources/azure-devops.svg"
				}
			]
		},
		"commands": [
			{
				"command": "azure-work-management.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "azure-work-management:boards.refreshBoards",
				"title": "Refresh",
				"icon": {
					"light": "src/resources/light/refresh.svg",
					"dark": "src/resources/dark/refresh.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "azure-work-management:boards.refreshBoards",
					"when": "view == azure-work-management:boards",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.59.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"ts-loader": "^9.2.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"axios": "^0.21.1"
	}
}
